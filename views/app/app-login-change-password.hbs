 <div class='form-container'>
   <h3>Change your password</h3>
<form class="user"  autocomplete="off" id="newPasswordForm" method="POST" action="/app/newpassword">
  <div class="form-group row">
<label>Username</label>
<input type="text" value='{{user}}' class="form-control" name="username" id='username' readonly>
</div>
<div class="form-group row">
<label>Old password</label>
<input class="form-control" autocomplete='false' type="password" id='passwordold' name="passwordold" required>

{{#if errorMessage}}
<div class="alert alert-warning mt-2" role="alert"> {{errorMessage}}</div>
  {{/if}}
</div>
<div class="form-group row">
<label>New password</label>
<input class="form-control" id='passwordnew1' type="password" name="passwordnew1" required>
<meter max="4" id="password-strength-meter"></meter>
		<p id="password-strength-text"></p>
</div>
<div class="form-group row">
<label>Confirm new password</label>
<input class="form-control" type="password"  id='passwordnew2' name="passwordnew2" required>
</div>

<button type="button" class="btn btn-primary" id='submitNewPassword'>Send</button>
</form>
<p></p>


