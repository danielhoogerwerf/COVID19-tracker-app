 <div class='form-container'>
   <h3>Change your password</h3>
<form class="user" action="/app/newpassword" method="post">
  <div class="form-group row">
<label>Username</label>
<input type="text" value='{{user}}' class="form-control" name="username" readonly>
</div>
<div class="form-group row">
<label>Old password</label>
<input class="form-control" type="password" name="passwordold">

{{#if errorMessage}}
<div class="alert alert-warning mt-2" role="alert"> {{  errorMessage }}</div>
  {{/if}}
</div>
<div class="form-group row">
<label>New password</label>
<input class="form-control" type="password" name="passwordnew1">
</div>
<div class="form-group row">
<label>Confirm new password</label>
<input class="form-control" type="password" name="passwordnew2">
</div>
<button type="submit" class="btn btn-primary" >Send</button>
</form>
<p></p>


