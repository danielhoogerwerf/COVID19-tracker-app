
 {{> navbar}}

<div class='form-container'> 
<h1>
 Results of search   
</h1>
<h5>Select the patient you wish to check</h5>
<br />
{{#if results}}

<table role="table" class='mrtable'>
  <thead role="rowgroup">
    <tr role="row">
      <th role="columnheader">BSN</th>
      <th role="columnheader">Name</th>
      <th role="columnheader">Birth date</th>
      <th role="columnheader">Gender</th>
          </tr>
  </thead>
  <tbody role="rowgroup">

{{#each results}}

<tr role="row">
      <td role="cell">{{bsn.0.bsnnumber}}</td>
      <td role="cell">{{bsn.0.name}}</td>
      <td role="cell">{{formatDate bsn.0.birthdate}}</td>
      <td role="cell">{{bsn.0.gender}}</td>
      <td role="cell">{{status}}</td>
      <td ><a class="btn btn-info" href="/app/lookup/patient/{{bsn.0.id}}">Select</a></td>
          </tr>

{{/each}}
</tbody></table>
{{/if}}
<p><a href="/app/lookup/patient" class="btn btn-primary">Return to search menu</a></p>
</div>






