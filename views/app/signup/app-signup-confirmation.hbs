    <label for="gender">Gender</label>
<input  class="form-control" name="gender" value="{{patient.gender}}" disabled>
</div>
<div class="form-group row">
    <label for='bsn'>BSN</label>
<input   class="form-control" name="bsnnumber" value="{{patient.bsn}}" disabled>
</div>
