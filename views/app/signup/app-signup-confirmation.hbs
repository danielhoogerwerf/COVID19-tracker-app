<label for="name">Name</label>
<input   class="form-control" name="name" value="{{patient.name}}" disabled> 
</div>
<div class="form-group row">
    <label for="birthdate">Birthdate</label>
<input   class="form-control" name="birthdate" value="{{patient.birthdate}}" disabled > 
