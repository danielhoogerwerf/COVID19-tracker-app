 <div class='form-container'>
              <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Add a user</h1>
              </div>
              
<form class="user" action="/app/signup/patient" method="post">
{{#if errorMessage}}
<div class="alert alert-warning" role="alert">
 {{errorMessage}}
</div>
{{/if}}
<div class="form-group row"><label>Name: </label><input required class="form-control" type='text' name='name' value="{{bsnResults.name}}"></div>
<div class="form-group row"><label>Birthdate: </label><input required class="form-control" type='date' name='birthdate' value="{{formattedDate}}"></div>
<div class="form-group row"><label>Region: </label>
<select name='region' class="form-control" required>
  <option name="Dienst Gezondheid & Jeugd Zuid-Holland Zuid">Dienst Gezondheid & Jeugd Zuid-Holland Zuid</option>
  <option name="GGD Amsterdam">GGD Amsterdam</option>
  <option name="GGD Brabant-Zuidoost">GGD Brabant-Zuidoost</option>
  <option name="GGD Drenthe">GGD Drenthe</option>
  <option name="GGD Fryslan">GGD Fryslan</option>
  <option name="GGD Gelderland-Zuid">GGD Gelderland-Zuid</option>
  <option name="GGD Gooi en Vechtstreek">GGD Gooi en Vechtstreek</option>
  <option name="GGD Groningen">GGD Groningen</option>
  <option name="GGD Haaglanden">GGD Haaglanden</option>
  <option name="GGD Hart voor Brabant">GGD Hart voor Brabant</option>
  <option name="GGD Hollands-Midden">GGD Hollands-Midden</option>
  <option name="GGD Hollands-Noorden">GGD Hollands-Noorden</option>
  <option name="GGD IJsselland">GGD IJsselland</option>
  <option name="GGD Kennemerland">GGD Kennemerland</option>
  <option name="GGD Limburg-Noord">GGD Limburg-Noord</option>
  <option name="GGD Noord- en Oost-Gelderland">GGD Noord- en Oost-Gelderland</option>
  <option name="GGD regio Utrecht">GGD regio Utrecht</option>
  <option name="GGD Rotterdam-Rijnmond">GGD Rotterdam-Rijnmond</option>
  <option name="GGD Twente">GGD Twente</option>
  <option name="GGD West-Brabant">GGD West-Brabant</option>
  <option name="GGD Zaanstreek-Waterland">GGD Zaanstreek-Waterland</option>
  <option name="GGD Zeeland">GGD Zeeland</option>
  <option name="GGD Zuid-Limburg">GGD Zuid-Limburg</option>
  <option name="Veiligheids- en Gezondheidsregio Gelderland-Midden">Veiligheids- en Gezondheidsregio Gelderland-Midden</option>
</select></div>
<div class="form-group column">
  <label>Gender: </label>
  <input required type="radio" name="gender" value="Male" {{checkedRadio bsnResults.gender "Male"}}>
  <label for="Male">Male</label>
  <input required type="radio" name="gender"  value="Female" {{checkedRadio bsnResults.gender "Female"}}>
  <label for="Female">Female</label>
  <input required type="radio" name="gender"  value="Other" {{checkedRadio bsnResults.gender "Other"}}>
  <label for="Other">Other</label>
  </div>
<div class="form-group row"><label>BSN: </label><input required name="bsn" class="form-control" type='text' value="{{bsnResults.bsnnumber}}"></div>
<div class="form-group row"><label>Current status infection</label>
<select name='status' class="form-control" required>
<option name='Home'>Home</option>
<option name='Hospitalized'>Hospitalized</option>
<option name='IC'>IC</option>
<option name='Deceased'>Deceased</option>
<option name='Recovered'>Recovered</option>
</select>
</div>
<div ><button class="btn btn-primary" type="submit">Preview your input</button></div>
</form>
</div>
